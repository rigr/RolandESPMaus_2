name: Build RolandESPMaus Firmware

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install system packages and ESP-IDF v4.4.6
        shell: bash
        run: |
          sudo apt-get update
          sudo apt-get install -y git wget flex bison gperf python3 python3-pip python3-venv cmake ninja-build ccache libffi-dev libssl-dev
          mkdir -p $HOME/esp
          cd $HOME/esp
          git clone -b v4.4.6 --depth=1 https://github.com/espressif/esp-idf.git esp-idf
          cd esp-idf
          ./install.sh
          git submodule update --init --recursive

      - name: Prepare env variables
        shell: bash
        run: |
          echo "IDF_PATH=$HOME/esp/esp-idf" >> $GITHUB_ENV
          echo "$HOME/esp/esp-idf/tools" >> $GITHUB_PATH

      - name: Verify IDF and python
        shell: bash
        run: |
          source $HOME/esp/esp-idf/export.sh
          idf.py --version

      - name: Ensure local esp_hid exists (do not overwrite)
        shell: bash
        run: |
          echo "Checking local components..."
          ls -la $GITHUB_WORKSPACE/components || true
          if [ ! -d "$GITHUB_WORKSPACE/components/esp_hid" ]; then
            echo "Error: components/esp_hid not found in repository. Please add it."
            exit 1
          fi

      - name: Check for removed registry components
        run: |
          if git grep -n "espressif/esp_hid\|espressif/bt" -- ':(exclude).github/workflows/' >/dev/null 2>&1; then
            echo "Found registry component references - remove them from idf_component.yml files."
            git grep -n "espressif/esp_hid\|espressif/bt" -- ':(exclude).github/workflows/'
            exit 1
           fi

      - name: Configure and Build (in project directory)
        shell: bash
        working-directory: ${{ github.workspace }}
        env:
          IDF_PATH: ${{ env.IDF_PATH }}
          CMAKE_SOURCE_DIR: ${{ github.workspace }}
        run: |
          source $IDF_PATH/export.sh
          echo "PWD: $(pwd)"
          echo "IDF_PATH: $IDF_PATH"
          idf.py fullclean || true
          idf.py set-target esp32
          idf.py reconfigure
          idf.py build

      - name: Upload firmware artifacts
        uses: actions/upload-artifact@v4
        with:
          name: RolandESPMaus_firmware
          path: |
            build/*.bin
            build/*.elf
            build/flasher_args.json
            build/bootloader/bootloader.bin
            build/partition_table/partition-table.bin
